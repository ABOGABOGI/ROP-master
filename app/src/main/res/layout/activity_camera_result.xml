<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.8"
        android:background="@color/dark_transparent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/app_name" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/dark_transparent"
                android:paddingEnd="@dimen/small"
                android:paddingStart="@dimen/small"
                android:paddingTop="@dimen/small"
                android:text="@string/foto_ktp"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/dark_transparent"
                android:paddingBottom="@dimen/small"
                android:paddingEnd="@dimen/small"
                android:paddingStart="@dimen/small"
                android:paddingTop="@dimen/tiny"
                android:text="@string/pastikan_seluruh_foto_ktp_di_daerah_kotak_yang_telah_disediakan_dan_terlihat_jelas"
                android:textColor="@android:color/white"
                android:textSize="@dimen/text_14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:alpha="0.8"
                android:background="@drawable/border_camera" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:alpha="0.8"
                android:background="@color/dark_transparent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnRetakePhoto"
                    style="@style/Widget.AppCompat.ButtonBar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="0.5"
                    android:background="@drawable/rounded_white_border"
                    android:text="@string/retake_photo"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btnUsePhoto"
                    style="@style/RoundedRedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/small"
                    android:layout_weight="0.5"
                    android:text="@string/send"
                    android:textColor="@android:color/white"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </FrameLayout>

</LinearLayout>
