        android:duration="30"
        android:fromXDelta="0%p"
        android:startOffset="50"
        android:toXDelta="2%p" />

    <translate
        android:duration="80"
        android:fromXDelta="0%p"
        android:startOffset="80"
        android:toXDelta="-7%p" />


    <translate
        android:duration="100"
        android:fromXDelta="0%p"
        android:startOffset="160"
        android:toXDelta="10%p" />


    <translate
        android:duration="80"
        android:fromXDelta="0%p"
        android:startOffset="260"
        android:toXDelta="-7%p" />


    <translate
        android:duration="80"
        android:fromXDelta="0%p"
        android:startOffset="340"
        android:toXDelta="4%p" />


    <translate
        android:duration="30"
        android:fromXDelta="0%p"
        android:startOffset="460"
        android:toXDelta="-2%p" />

</set>